\EndFor
\EndIf
\EndFor
\end{algorithmic}
\end{algorithm}

\begin{algorithm}[!tb]
\caption{\texttt{propagate\_core\_status}} 
\begin{algorithmic}
\State Wait from $\texttt{EMPTY\_CORE}_j$ from each child $a_j\in Ch_i$
\If{$\exists k : \texttt{EMPTY\_CORE}_k = true$} 
