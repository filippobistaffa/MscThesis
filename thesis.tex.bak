\begin{algorithm}[!tb]
\caption{\texttt{demand\_propagation}} 
\begin{algorithmic}
\State $p_i(X_{C_i}) = \psi_i(X_{\psi_i}) \otimes \bigotimes_{j \in Ch_i} d_{j \rightarrow i}(Sep_{ji})\otimes \bigotimes_{x_S \in X^{\setminus r}_i}o(x_S)$ 
